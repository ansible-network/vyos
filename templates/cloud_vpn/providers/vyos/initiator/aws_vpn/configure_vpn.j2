set vpn ipsec site-to-site peer {{ cloud_vpn_responder_failover_ip }} authentication id {{ cloud_vpn_initiator_public_ip }}
set vpn ipsec site-to-site peer {{ cloud_vpn_responder_failover_ip }} authentication mode pre-shared-secret
set vpn ipsec site-to-site peer {{ cloud_vpn_responder_failover_ip }} authentication pre-shared-secret {{ cloud_vpn_psk }}
